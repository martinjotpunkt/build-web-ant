<?xml version="1.0" encoding="utf-8"?>
<app>
    <project>
        <bundle>
            <vendor></vendor>
        </bundle>
    </project>
    <writepath>
        <dir>/writepath</dir>
    </writepath>
    <sf>
        <web>
            <dir>${docroot}/web</dir>
        </web>
        <app>
            <dir>${docroot}/app</dir>
            <console>${app.sf.app.dir}/console</console>
        </app>
        <bootstrap>
            <destination>${app.sf.app.dir}</destination>
            <file>bootstrap.php.cache</file>
            <is-enabled>true</is-enabled>
            <source>${docroot}/vendor/sensio/distribution-bundle/Sensio/Bundle/DistributionBundle/Resources/bin/build_bootstrap.php</source>
        </bootstrap>
    </sf>
    <cache>
        <destination>${app.sf.app.dir}/cache</destination>
        <is-enabled>true</is-enabled>
        <source>${app.writepath.dir}/cache/${env}</source>
    </cache>
    <logs>
        <destination>${app.sf.app.dir}/logs</destination>
        <is-enabled>true</is-enabled>
        <source>${app.writepath.dir}/logs/${env}</source>
    </logs>
    <ugc>
        <dir>${app.writepath.dir}/ugc</dir>
        <uploads>
            <is-enabled>true</is-enabled>
            <source>${app.ugc.dir}/uploads/${env}</source>
            <destination>${app.sf.web.dir}/uploads</destination>
        </uploads>
        <sitemap>
            <is-enabled>true</is-enabled>
            <source>
                <dir>${app.ugc.dir}/xmlsitemap/sitemaps/${env}</dir>
                <file>${app.ugc.dir}/xmlsitemap/${env}/sitemap.xml</file>
            </source>
            <destination>
                <file>${app.sf.web.dir}/sitemap.xml</file>
            </destination>
        </sitemap>
    </ugc>
    <migration>
        <is-enabled>true</is-enabled>
        <mw-bundle>
            <is-enabled>false</is-enabled>
        </mw-bundle>
    </migration>
    <fixture>
        <is-enabled>true</is-enabled>
        <dir>${docroot}/src/${app.project.bundle.vendor}/Fixture</dir>
    </fixture>
    <elasticsearch>
        <is-enabled>true</is-enabled>
    </elasticsearch>
</app>
